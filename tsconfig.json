{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "typings",
    "emitDeclarationOnly": true,
    "module": "ES6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "lib": ["DOM", "ESNext"],
    "types": ["node"],
    "target": "ES2015",
    "moduleResolution": "node",
    "paths": {
      "@src/*": ["./src/*"],
    },
  },
  "include": [
    "./src/**/*",
  ]
}
