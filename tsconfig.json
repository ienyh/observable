{
  "compilerOptions": {
    "rootDir": "lib",
    "outDir": "ts-build",
    "module": "ES6",
    "declaration": true,
    "declarationDir": "types",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "lib": ["DOM", "ESNext"],
    "types": ["vite/client", "node"],
    "target": "ES2015",
    "moduleResolution": "node",
    "paths": {
      "@/core/*": ["./lib/core/*"],
      "@/middleware/*": ["./lib/middleware/*"],
      "@/decorator/*": ["./lib/decorator/*"],
      "@/operator/*": ["./lib/operator/*"],
      "@/duck/*": ["./lib/duck/*"]
    }
  },
  "include": [
    "lib/**/*"
  ]
}
