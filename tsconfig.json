{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "tsc-compiled",
    "emitDeclarationOnly": true,
    "module": "ES6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "lib": ["DOM", "ESNext"],
    "types": ["vite/client", "node"],
    "target": "ES2015",
    "moduleResolution": "node",
    "paths": {
      "@core/*": ["./core/*"],
      "@decorator/*": ["./decorator/*"],
      "@operator/*": ["./operator/*"],
      "@duck/*": ["./duck/*"]
    },
  },
  "include": [
    "./core/**/*",
    "./duck/**/*",
    "./operator/**/*",
    "./decorator/**/*"
  ]
}
